<main class="chat">
    <div class="chat-sidebar">
        <a class="chat-sidebar__profile-link" href="/#settings">Профиль</a>
        <div class="chat-sidebar__message-search">
            <input class="chat-sidebar__message-search-input" placeholder="Поиск">
            <div class="chat-sidebar__message-search-label" >
                <svg width="13" height="14" viewBox="0 0 13 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M7.59239 8.41382C6.16047 9.84574 3.83886 9.84574 2.40694 8.41382C0.975017 6.9819 0.975017 4.6603 2.40694 3.22837C3.83886 1.79645 6.16047 1.79645 7.59239 3.22837C9.02431 4.6603 9.02431 6.9819 7.59239 8.41382ZM8.03277 9.79678C6.07255 11.2962 3.25696 11.1495 1.46413 9.35663C-0.488491 7.40401 -0.488491 4.23819 1.46413 2.28556C3.41675 0.332943 6.58258 0.332943 8.5352 2.28556C10.3279 4.07831 10.4747 6.89373 8.97555 8.85394L12.5423 12.4206L11.5994 13.3635L8.03277 9.79678Z" fill="#999999"/>
                </svg>
            </div>
        </div>
        {{#each dialogues}}
            {{>sidebarDialogue user = user lastMessage = lastMessage unreadMessagesCount = unreadMessagesCount}}
        {{/each}}

    </div>
    <div class="chat-lent">
        <div class="chat-lent__head">
            <div class="chat-lent__head__avatar"></div>
            <h5 class="chat-lent__head__name">Донил</h5>
            <button class="chat-lent__head__settings-btn"></button>
        </div>
        <div class="chat-lent__messages-container">
        {{#each messages}}
            {{>messageTemplate content = content timestamp = timestamp fromViewer = fromViewer}}
        {{/each}}
        </div>
        <div class="chat-lent__messages-input-container">
            <button class="chat-lent__messages-input-container__attach-btn"></button>
            <textarea id="message" name="message" class="chat-lent__messages-input-container__textarea" 
                oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'></textarea>
            <button class="chat-lent__messages-input-container__send-btn"></button>
        </div>
    </div>
</main>